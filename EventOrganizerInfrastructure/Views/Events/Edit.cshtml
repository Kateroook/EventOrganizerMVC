@model EventOrganizerDomain.Model.Event

@{
    ViewData["Title"] = "Редагування";
}

<h1>Edit</h1>

<h3>Редагування події</h3>
<hr />

<div class="container">


    <div class="row">
        <div class="col-md-">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label>Тип місця проведення:</label>
                <select id="placeType" class="form-control">
                    <option value=""></option>
                    <option value="online">Онлайн</option>
                    <option value="offline">Офлайн</option>
                </select>

                <!-- Элементы выбора страны, города и места проведения -->
                <div id="offlineFields" style="display:none;">
                    <label>Країна:</label>
                    <select id="country" class="form-control"></select>
                    <br />
                    <label>Місто:</label>
                    <select id="city" class="form-control"></select>
                    <br />
                    <label>Місце:</label>
                    <select id="place" name="PlaceId" class="form-control"></select>
                </div>

                <div id="onlineFields" style="display:none;">
                    <label>Місце в онлайні:</label>
                    <select id="onlinePlaces" name="PlaceId" class="form-control"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Organizers" class="control-label">Організатори</label>
                    <select asp-for="Organizers" class="form-control" asp-items="ViewBag.OrganizerId" multiple="multiple">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Tags" class="control-label">Теги</label>
                    <select asp-for="Tags" class="form-control" asp-items="ViewBag.TagId" multiple="multiple"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Speaker" class="control-label"></label>
                    <input asp-for="Speaker" class="form-control" />
                    <span asp-validation-for="Speaker" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTimeStart" class="control-label"></label>
                    <input asp-for="DateTimeStart" class="form-control" />
                    <span asp-validation-for="DateTimeStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTimeEnd" class="control-label"></label>
                    <input asp-for="DateTimeEnd" class="form-control" />
                    <span asp-validation-for="DateTimeEnd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PictureUrl" class="control-label">Постер</label>
                    <input asp-for="PictureUrl" class="form-control" />
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <img id="imageUrlPreview" class="img-fluid" src="#" alt="Постер події" style="max-width: 200px; max-height: 200px; display: none;" />
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#placeType').change(function () {
                var placeType = $(this).val();

                if (placeType === 'online') {
                    $('#onlineFields').show();
                    $('#offlineFields').hide();

                    $.get("/Places/PlacesOnline", function (data) {
                        $('#onlinePlaces').html(data);
                    });

                } else {
                    $('#offlineFields').show();
                    $('#onlineFields').hide();

                    // Загрузка списку країн з бд
                    $.getJSON('@Url.Action("GetCountries", "Places")', function (data) {
                        var items = '<option value="">Оберіть країну</option>';
                        $.each(data, function (i, country) {
                            items += '<option value="' + country.id + '">' + country.name + '</option>';
                        });
                        $('#country').html(items);
                    });
                }
            });

            // Вибір країни
            $('#country').change(function () {
                var countryId = $(this).val();

                // Загрузка списку міст з бази даних
                $.getJSON('@Url.Action("GetCitiesInCountry", "Places")', { countryId: countryId }, function (data) {
                    var items = '<option value="">Оберіть місто</option>';
                    $.each(data, function (i, city) {
                        items += '<option value="' + city.id + '">' + city.name + '</option>';
                    });
                    $('#city').html(items);
                });
            });

            $('#city').change(function () {
                var cityId = $(this).val();
                // AJAX запрос для заповнення списку з місць у місті
                $.get("/Places/PlacesInCity?cityId=" + cityId, function (data) {
                    $('#place').html(data);
                });
            });
        });
    </script>

    <script>
        function readImageUrl(input) {
            var imageUrl = input.value;
            if (imageUrl) {
                $('#imageUrlPreview').attr('src', imageUrl).show();
            } else {

                $('#imageUrlPreview').hide();
            }
        }

        $("#PictureUrl").change(function () {
            readImageUrl(this);
        });
    </script>

    <script>
        // Функция для проверки URL на стороне клиента
        function validateUrl(url) {
            var urlPattern = /\b(?:https?:\/\/|www\.)\S+\b/;
            return urlPattern.test(url);
        }

        // Привязка события изменения поля PictureUrl к функции проверки URL
        $("#PictureUrl").change(function () {
            var urlInput = $(this);
            var urlValue = urlInput.val();
            var errorSpan = urlInput.nextAll(".text-danger").first();
            if (validateUrl(urlValue)) {
                errorSpan.text(""); // Очистить сообщение об ошибке, если URL действителен
            } else {
                errorSpan.text("Неправильный формат URL");
            }
        });
    </script>
}
