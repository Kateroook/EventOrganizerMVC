@model List<EventOrganizerDomain.Model.Registration>

<div class="container mt-5">
    <h1 class="mb-4">Ваші реєстрації на події</h1>

    <div class="table-responsive shadow p-3 mb-5 bg-white rounded">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Назва події</th>
                    <th>Дата</th>
                    <th>Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var registration in Model)
                {
                    <tr>
                        <td>@registration.Event.Title</td>
                        <td>@registration.Event.DateTimeStart.ToString("dd MMMM yyyy, HH:mm")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Details" asp-controller="Events" asp-route-id="@registration.EventId" class="btn btn-primary btn-sm rounded mr-2" style="margin-right: 5px" title="Деталі">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <form asp-action="CancelRegistration" asp-route-registrationId="@registration.Id" method="post" onsubmit="return confirm('Ви впевнені, що хочете скасувати реєстрацію на цю подію?')" class="mr-2">
                                    <button type="submit" class="btn btn-danger btn-sm" title="Скасувати">
                                        <i class="fas fa-times-circle"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
