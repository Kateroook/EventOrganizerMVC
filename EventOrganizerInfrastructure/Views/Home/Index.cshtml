@{
    ViewData["Title"] = "Домашня сторінка";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="text-center mb-4">
                <h1 class="display-4">Ласкаво просимо!</h1>
                <p class="lead">Дізнайтеся про події та зустрічі для учасників і організаторів.</p>
            </div>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="text-center mt-3">
                <p>Привіт, @User.Identity.Name!</p>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="btn btn-danger btn-block">Вихід</button>
                </form>
                </div>
            }
            else
            {
                <div class="text-center">
                    <a class="btn btn-primary mr-2" asp-controller="Account" asp-action="Login">Увійти</a>
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Реєстрація</a>
                </div>
            }
        </div>
    </div>
</div>
